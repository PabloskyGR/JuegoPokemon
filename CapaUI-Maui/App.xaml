<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CapaUI_Maui"
             x:Class="CapaUI_Maui.App">
    <Application.Resources>

        <ResourceDictionary>
            <!-- Colores inspirados en Pokémon -->
            <Color x:Key="PokemonBlue">#3B4CCA</Color>
            <Color x:Key="PokemonYellow">#FFCB05</Color>
            <Color x:Key="PokemonRed">#FF0000</Color>
            <Color x:Key="PokemonWhite">#FFFFFF</Color>
            <Color x:Key="PokemonGray">#D3D3D3</Color>

            <!-- Estilos para botones -->
            <Style TargetType="Button" x:Key="PokemonButtonStyle">
                <Setter Property="BackgroundColor" Value="{StaticResource PokemonYellow}" />
                <Setter Property="TextColor" Value="{StaticResource PokemonBlue}" />
                <Setter Property="FontFamily" Value="PokemonSolid" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="Padding" Value="10,5" />
                <Setter Property="BorderColor" Value="{StaticResource PokemonRed}" />
                <Setter Property="BorderWidth" Value="2" />
            </Style>

            <!-- Estilos para etiquetas -->
            <Style TargetType="Label" x:Key="PokemonTitleStyle">
                <Setter Property="FontFamily" Value="PokemonSolid" />
                <Setter Property="FontSize" Value="24" />
                <Setter Property="TextColor" Value="{StaticResource PokemonYellow}" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="Margin" Value="0,10" />
            </Style>
            <Style TargetType="Label" x:Key="PokemonTextStyle">
                <Setter Property="FontFamily" Value="PokemonSolid" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="TextColor" Value="{StaticResource PokemonWhite}" />
                <Setter Property="Margin" Value="5" />
            </Style>

            <!-- Estilo para Picker -->
            <Style TargetType="Picker">
                <Setter Property="BackgroundColor" Value="{StaticResource PokemonWhite}" />
                <Setter Property="TextColor" Value="{StaticResource PokemonBlue}" />
                <Setter Property="FontFamily" Value="PokemonSolid" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="Margin" Value="5" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
