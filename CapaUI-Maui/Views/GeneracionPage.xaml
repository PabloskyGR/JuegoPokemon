<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CapaUI_Maui.Views.GeneracionPage"
             xmlns:vm="clr-namespace:CapaUI_Maui.ViewModels"
             Title="GeneracionPage">
    <ContentPage.BindingContext>
        <vm:SeleccionGeneracionVM />
    </ContentPage.BindingContext>
    <StackLayout Padding="20" BackgroundColor="#3B4CCAAA">
        <Label
            Text="Elige tu Generación"
            Style="{StaticResource PokemonTitleStyle}"
            FontSize="28" />
        <Picker
            ItemsSource="{Binding Generaciones}"
            SelectedItem="{Binding GeneracionSeleccionada, Mode=TwoWay}"
            HorizontalOptions="Center"
            WidthRequest="250"
            Margin="0,20" />
        <Button
            Text="¡Jugar!"
            Style="{StaticResource PokemonButtonStyle}"
            Command="{Binding BotonGeneracionCommand}"
            HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>