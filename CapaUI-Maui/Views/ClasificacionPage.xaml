<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:CapaUI_Maui.ViewModels"
    x:Class="CapaUI_Maui.Views.ClasificacionPage"
    Title="Clasificación">
    
    <ContentPage.BindingContext>
        <vm:ListadoPuntuacionesVM />
    </ContentPage.BindingContext>
    
    <StackLayout Padding="20" BackgroundColor="#3B4CCAAA">
        <Label
            Text="¡Mejores Entrenadores!"
            Style="{StaticResource PokemonTitleStyle}"
            FontSize="28"
            HorizontalOptions="Center" />
        <CollectionView
            ItemsSource="{Binding ListadoPuntuaciones}"
            Margin="0,10"
            EmptyView="No hay puntuaciones disponibles">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame
                        BackgroundColor="{StaticResource PokemonBlue}"
                        CornerRadius="10"
                        Padding="10"
                        Margin="0,5">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <Label
                                Grid.Column="1"
                                Text="{Binding Nombre}"
                                Style="{StaticResource PokemonTextStyle}"
                                FontSize="18"
                                VerticalOptions="Center"
                                Margin="10,0" />
                            <Label
                                Grid.Column="2"
                                Text="{Binding Puntuacion, StringFormat='{0} pts'}"
                                Style="{StaticResource PokemonTextStyle}"
                                FontSize="18"
                                TextColor="{StaticResource PokemonYellow}"
                                VerticalOptions="Center" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>