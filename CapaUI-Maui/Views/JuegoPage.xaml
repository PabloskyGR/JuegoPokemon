<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CapaUI_Maui.Views.JuegoPage"
             Title="Pokémon Quiz">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Game Status -->
        <StackLayout Grid.Row="0" Orientation="Horizontal" HorizontalOptions="Center">
            <Label Text="{Binding Rondas, StringFormat='Ronda: {0}/20'}" 
                   FontSize="18" 
                   FontAttributes="Bold" />
            <Label Text="{Binding Puntos, StringFormat='Puntos: {0}'}" 
                   FontSize="18" 
                   FontAttributes="Bold" 
                   Margin="20,0,0,0" />
        </StackLayout>

        <!-- Pokémon Image -->
        <Image Grid.Row="1" 
               Source="{Binding PartidaActual.PokemonCorrecto.UrlImagen}" 
               HeightRequest="200" 
               WidthRequest="200"
               HorizontalOptions="Center" 
               Margin="0,20" /> 

        <!-- Options CollectionView -->
        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding PartidaActual.Opciones}"
                        SelectedItem="{Binding PokemonSeleccionado, Mode=TwoWay}"
                        SelectionMode="Single"
                        Margin="0,20">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="2" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="#2196F3"
                           CornerRadius="10"
                           Padding="10"
                           Margin="5">
                        <Label Text="{Binding Nombre}"
                               TextColor="White"
                               FontSize="16"
                               HorizontalOptions="Center" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Save Score Section -->
        <StackLayout Grid.Row="3" 
                    IsVisible="{Binding MostrarGuardar}"
                    Margin="0,20"
                    Spacing="10">
            <Entry Placeholder="Ingresa tu nombre"
                   Text="{Binding NombreJugador}"
                   HorizontalOptions="FillAndExpand" />
            <Button Text="Guardar Puntuación"
                    Command="{Binding BotonGuardar}"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    CornerRadius="10"
                    Padding="10"
                    HorizontalOptions="FillAndExpand" />
        </StackLayout>
    </Grid>
</ContentPage>
